{
  "manifest_version": 3,
  "name": "Hyper Captcha",
  "description": "하이퍼 캡챠 크롬 확장",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hyper Captcha",
    "default_icon": {
      "16": "images/icon-16-disabled.png",
      "32": "images/icon-32-disabled.png",
      "48": "images/icon-48-disabled.png",
      "128": "images/icon-128-disabled.png"
    }
  },
  "permissions": [
    "activeTab",
    "alarms",
    "contextMenus",
    "storage",
    "scripting",
    "declarativeNetRequest",
    "desktopCapture",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "http://dev.hyperinfo.co.kr:12004/*",
    "https://dev.hyperinfo.co.kr/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://safind.scourt.go.kr/sf/mysafind.jsp*"
      ],
      "all_frames": true,
      "js": ["content-script.js"]
    }
  ]
}
